<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="SamplesController">
    <children>
        <LineChart fx:id="samplesChart" title="Random Sampling">
            <xAxis>
                <NumberAxis fx:id="xAxis" label="X Value"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Y Value"/>
            </yAxis>
        </LineChart>
        <Button fx:id="switchToValues" text="Switch to Values" onAction="#switchToValues"/>
    </children>
</VBox>
